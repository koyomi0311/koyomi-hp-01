---
const { titleText } = Astro.props;
---

<h1 class="c-heading-title">{titleText}</h1>

<style lang="scss">
  @use '../styles/breakpoints' as *;

  .c-heading-title {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: auto;
    width: fit-content;
    font-size: 16px;

    &::after {
      content: "";
      width: 100%;
      height: 1px;
      background-color: var(--color-main);
    }
  }
</style>
