---

<!-- top -->
<Layout
  subTitle="トップページ"
  ogType="website"
  description="所沢市の女性向けヨガ&ピラティス「koyomi yoga pilates」。マタニティ・産後ケアからボディメイクまで多彩なプログラム。少人数制の空間で心と体を整えます。"
  jsonLd={jsonLd}
>
  <!-- top-kv -->
  <div id="kv">
    <TopKv logoTall={logoTall} />
  </div>

  <!-- top-main -->
  <main class="top-main">

    <!-- conceptセクションbg設定 ここから -->
    <div class="top-concept-bg">

      <!-- top-catchphrase -->
      <div id="catchphrase">
        <TopCatchphrase />
      </div>

      <!-- top-concept -->
      <div id="concept">
        <TopConcept />
      </div>

      <!-- conceptセクションbg -->
      <div class="top-concept-bg-image"></div>
    </div><!-- /.top-concept-bg -->
    <!-- conceptセクションbg設定 ここまで -->

    <!-- top-programs -->
    <div id="programs">
      <TopPrograms />
    </div>

    <!-- top-menu -->
    <div id="menu">
      <TopMenu />
    </div>

    <!-- top-flow -->
    <div id="flow">
      <TopFlow />
    </div>

    <!-- top-faq -->
    <div id="faq">
      <TopFaq />
    </div>

    <!-- contactセクションbg設定 ここから -->
    <div class="top-contact-bg">

      <!-- top-access -->
      <div id="access">
        <TopAccess />
      </div>

      <!-- top-contact -->
      <section class="top-contact">
        <ContactSection />
      </section><!-- /.top-contact -->

      <!-- contactセクションbg -->
      <div class="top-contact-bg-image"></div>
    </div><!-- /.top-contact-bg -->
    <!-- contactセクションbg設定 ここまで -->
  </main>
</Layout>

<style lang="scss">
  @use '../styles/breakpoints' as *;

  .top-main {
    background-color: var(--color-base);
  }

  // top-concept-bg
  .top-concept-bg {
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  .top-concept-bg-image {
    width: 800px;
    height: 1030px;
    background-image: url(/assets/images/concept/bg-concept-sp@2x.webp);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center center;
    position: absolute;
    bottom: 0;
    left: 50%;
    z-index: -1;
    transform: translateX(-50%);
  }

  @include mq() {
    .top-concept-bg-image {
      width: 2000px;
      height: 1486px;
      background-image: url(/assets/images/concept/bg-concept-pc@2x.webp);
    }
  }

  // top-contact
  .top-contact {
    padding-bottom: 284px;
    margin-top: 80px;
  }

  // top-contact-bg
  .top-contact-bg {
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  .top-contact-bg-image {
    width: 800px;
    height: 552px;
    background-image: url(/assets/images/contact/bg-contact-sp@2x.webp);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center center;
    position: absolute;
    bottom: 0;
    left: 50%;
    z-index: -1;
    transform: translateX(-50%);
  }

  @include mq() {
    .top-contact {
      padding-bottom: 280px;
      margin-top: 180px;
    }

    // top-contact-bg
    .top-contact-bg-image {
      width: 2000px;
      height: 680px;
      background-image: url(/assets/images/contact/bg-contact-pc@2x.webp);
    }
  }
</style>
